# what a wonderful life
alias ls='ls -G'

alias o='open .'

alias gitx='open -a GitX .'
alias x=gitx

# open photos in a directory
alias jpgs='open *.[jJ][pP][gG]'
alias dngs='open *.[dD][nN][gG]'
alias rwls='open *.[rR][wW][lL]'

alias log='tail -F /var/log/php/php_errors.log'
alias mplayer='open -a "MPlayer OSX Extended"'
alias mute="osascript -e 'set volume 0'"

alias nginx-restart='sudo launchctl stop org.macports.nginx; sudo launchctl start org.macports.nginx'
alias fpm-restart='sudo launchctl stop org.macports.php-fpm; sudo launchctl start org.macports.php-fpm'

alias clean-dns-cache='sudo killall -HUP mDNSResponder'
alias clean-font-cache='atsutil databases -removeUser; atsutil server -shutdown; atsutil server -ping'

function g() {
    open -a Safari "http://www.google.com/search?q=$*&esrch=BetaShortcuts&ie=utf-8&oe=utf-8"
}
